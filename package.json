{
  "name": "@loslazo/glimmer-package",
  "version": "0.1.0",
  "description": "A Vue 3 design system component library",
  "author": "Laurens van Tour",
  "license": "MIT",
  "type": "module",
  "private": false,
  "main": "./dist/glimmer-package.cjs.js",
  "module": "./dist/glimmer-package.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/glimmer-package.es.js",
      "require": "./dist/glimmer-package.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.css",
      "require": "./dist/styles/index.css"
    },
    "./styles/*": "./dist/styles/*",
    "./components/*": {
      "import": "./dist/components/*",
      "require": "./dist/components/*",
      "types": "./dist/types/components/*"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LosLazo/glimmer-package.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "prepare": "npm run build",
    "version": "npm run build && git add -A dist",
    "generate-docs": "tsx scripts/generate-docs.ts"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.3.0",
    "feather-icons": "^4.29.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/vue3": "^8.6.14",
    "@storybook/vue3-vite": "^8.6.14",
    "@types/feather-icons": "^4.29.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.17.48",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.1",
    "fs-extra": "^11.3.0",
    "nuxt": "^3.17.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5",
    "storybook": "^8.6.14",
    "terser": "^5.39.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.2",
    "vite-plugin-dts": "^3.6.3",
    "vue": "^3.3.9",
    "vue-tsc": "^2.0.0",
    "tsx": "^4.7.0"
  }
}
